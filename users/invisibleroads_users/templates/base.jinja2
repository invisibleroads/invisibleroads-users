{% extends "invisibleroads_posts:templates/base.jinja2" %}

{% block head_style_inline %}
{{ super() -}}
.user-link {margin-right: 1em}
{% endblock %}

{% block head_script_inline %}
{{ super() -}}
x = IR.users = {}
x.assets_url = '{{ request.static_path("invisibleroads_users:assets/") }}';
x.login_url = '{{ request.route_path("user_login") + "?target_url=" + request.path }}';
x.user_id = {{ user.id if user else 0 }};
{% if user %}
x.csrf_token = '{{ request.session.get_csrf_token() }}';
{% endif %}
{% endblock %}

{% block body_navigation_top %}
<form id="login-form" action="{{ request.route_path('user_logout' if user else 'user_login') }}" method="post" class="navbar-form navbar-right" role="navigation">
<input name="target_url" type="hidden" value="{{ request.path }}">
<div class="form-group">
{% if user %}
<a class="navbar-link user-link" href="{{ request.route_path('user', user_id=user.id) }}">{{ user.name }}</a>
{% endif %}
</div>
<button class="btn btn-default" type="submit">{{ 'Exit' if user else 'Start' }}</button>
</form>
{% endblock %}
